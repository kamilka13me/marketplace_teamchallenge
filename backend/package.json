{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "server.mjs",
  "type": "module",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "scripts": {
    "start": "mpm run start:dev-sdb",
    "prod": "npm run start:prod",
    "dev": "npm run start:dev-ldb:log",
    "stop": "pm2 stop all",
    "delete": "pm2 delete all",
    "start:dev-sdb": "cross-env NODE_ENV=development  pm2 start server.js  --watch --ignore-watch logs    --output ./logs/output.log --error ./logs/error.log --name 'MT_start'",
    "start:dev-sdb:logs": "cross-env NODE_ENV=development  pm2 start server.js  --watch --ignore-watch logs    --output ./logs/output.log --error ./logs/error.log --name 'MT_start' & pm2 logs ",
    "logs:dev-sdb": "pm2 logs MT_start --lines 40",
    "stop:dev-sdb": "pm2 stop MT_start",
    "delete:dev-sdb": "pm2 delete MT_start",
    "restart:dev-sdb": "pm2 restart MT_start",
    "start:prod": "cross-env NODE_ENV=production  pm2 start server.js  --output ./logs/output.log --error ./logs/error.log --name 'MT_prod'",
    "start:prod:log": "cross-env NODE_ENV=production  pm2 start server.js  --output ./logs/output.log --error ./logs/error.log --name 'MT_prod' & pm2 logs ",
    "logs:prod": "pm2 logs MT_prod --lines 40",
    "stop:prod": "pm2 stop MT_prod",
    "delete:prod": "pm2 delete MT_prod",
    "restart:prod": "pm2 restart MT_prod",
    "start:dev-ldb": " pm2 start server.js --watch --ignore-watch logs    --output ./logs/output.log --error ./logs/error.log --name 'MT_dev'",
    "start:dev-ldb:log": " pm2 start server.js --watch --ignore-watch logs   --ignore-watch ./logs --output ./logs/output.log --error ./logs/error.log --name 'MT_dev' & pm2 logs  ",
    "logs:dev-ldb": "pm2 logs MT_dev --lines 40",
    "stop:dev-ldb": "pm2 stop MT_dev",
    "delete:dev-ldb": "pm2 delete MT_dev",
    "restart:dev-ldb": "pm2 restart MT_dev",
    "stop:all": "pm2 delete all",
    "logs:all": "pm2 logs",
    "send": "node cli/send_log.js",
    "test": "jest",
    "ecc": "node cli/create.js",
    "lint": "npx eslint .",
    "lint:fix": "eslint --fix .",
    "format": "prettier --write .",
    "prepare": "cd .. && husky install backend/.husky"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "fs": "0.0.1-security",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.1.0",
    "morgan": "^1.10.0",
    "node-telegram-bot-api": "^0.64.0",
    "path": "^0.12.7",
    "pm2": "^5.3.1",
    "socket.io": "^4.7.4",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "validator": "^13.11.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-node": "^4.1.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-jest": "^27.6.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "prettier": "^3.2.4",
    "supertest": "^6.3.4"
  }
}